@model IEnumerable<Chairman>
@inject SignInManager<ApplicationUser> signinManager

@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
            <img src="https://t3.ftcdn.net/jpg/04/79/28/44/360_F_479284461_onntELGJGF4M4XMCU9jOjbZLoRuChD4w.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>First slide label</h5>
                <p>Some representative placeholder content for the first slide.</p>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <img src="https://st5.depositphotos.com/35914836/64906/i/450/depositphotos_649066108-stock-photo-pink-flowers-park-spring-bloosom.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Second slide label</h5>
                <p>Some representative placeholder content for the second slide.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://w0.peakpx.com/wallpaper/253/47/HD-wallpaper-sexy-love-rose-rose-flower-sexy-rose-reflection-pink.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Third slide label</h5>
                <p>Some representative placeholder content for the third slide.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

@foreach(var chairman in Model)
{
    var photoPath = "~/Images/" + (chairman.PhotoPath ?? "chairman.jpg");

    
    <section class="about">
        <div class="about-image">
            <h3>MESSAGE FROM CHAIRMAN</h3>
            <img src="@photoPath" asp-append-version="true" />
            <a href="" class="btn">Message</a>
            <a href="" class="btn">Biography</a>
            <a href="" class="btn">Academic Profile</a>
            <a href="" class="btn">Contact</a>
        </div>
        <div class="about-content">
            <p>
                @chairman.Description
            </p>
            <a href="" class="read-more">Read More</a>
        </div>
    </section>
    <div class="bg">
    @if (chairman.IsMissionSelected == true)
    {
        <section class="about-1">
            <div class="about-image">
                <p>
                    @chairman.Mission
                </p>
                <a href="" class="read-more-1">Read More</a>
            </div>
            <div class="about-content">
                <h2>MISSION</h2>
            </div>
        </section>
    }
        @if (chairman.IsVisionSelected == true)
        {
            <section class="about-2">
                <div class="about-content">
                    <h2>VISION</h2>
                </div>
                <div class="about-image">
                    <p>
                        @chairman.Vision
                    </p>
                    <a href="" class="read-more-1">Read More</a>
                </div>
            </section>
        }
        
        @if (chairman.IsGoalSelected == true)
        {
            <section class="about-1">
                <div class="about-image">
                    <p>
                        @chairman.Goal
                    </p>
                    <a href="" class="read-more-1">Read More</a>
                </div>
                <div class="about-content">
                    <h2>OURS GOALS</h2>
                </div>
            </section>
        }
        
        @if (chairman.IsValuesSelected == true)
        {
            <section class="about-2">
                <div class="about-content">
                    <h2>CORE VALUES</h2>
                </div>
                <div class="about-image">
                    <p>
                        @chairman.Values
                    </p>
                    <a href="" class="read-more-1">Read More</a>
                </div>
            </section>
        }
        
    </div>

    <a asp-action="Edit" asp-controller="Home" asp-route-Id="@chairman.Id" class="btn btn-primary">Edit</a>
}

